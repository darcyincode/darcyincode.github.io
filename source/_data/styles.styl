// 自定义侧边栏样式
.sidebar {
  position: sticky;
  top: 20px;
  max-height: calc(100vh - 40px);
  overflow-y: auto;
  
  .sidebar-inner {
    padding: 20px 10px;
  }
  
  .site-state {
    display: flex;
    justify-content: space-around;
    margin-bottom: 20px;
    padding: 15px 0;
    border-bottom: 1px solid #eee;
    
    .site-state-item {
      text-align: center;
      
      .site-state-item-count {
        display: block;
        font-size: 18px;
        font-weight: 600;
        color: #222;
      }
      
      .site-state-item-name {
        font-size: 13px;
        color: #999;
      }
    }
  }
}

// 优化侧边栏链接样式
.sidebar-nav {
  margin: 0;
  padding: 0;
  list-style: none;
  
  li {
    margin: 5px 0;
    
    a {
      display: block;
      padding: 8px 15px;
      color: #555;
      border-radius: 4px;
      transition: all 0.2s;
      
      &:hover {
        background: #f5f5f5;
        color: #222;
        text-decoration: none;
      }
    }
  }
}
